<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <View
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_gravity="bottom"
        android:background="@drawable/item_popular_category_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_saved_recipe_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="top|center"
            android:src="@drawable/onboarding"/>

        <TextView
            android:id="@+id/tv_saved_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/neutral90Color"
            android:text="@string/pepper_sweetcorn_ramen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/neutral30Color"
            android:text="@string/time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/tv_saved_recipe_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/neutral90Color"
                android:text="@string/_10_mins" />

            <ImageView
                android:id="@+id/iv_saved_recipe"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_box_saved"
                android:scaleType="center"
                android:src="@drawable/ic_bookmark_border"
                android:contentDescription="@string/icon_saved" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>